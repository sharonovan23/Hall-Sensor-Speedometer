int half_revolutions = 0;
 int SPEED = 0;
 unsigned long lastmillis = 0;
 long pi = 3.141592;
 long diameter = 1.91667;
 void setup(){
 Serial.begin(9600); 
 attachInterrupt(0, SPEED_ADD , FALLING);
 }
 void loop(){
 if (millis() - lastmillis == 1000){ //Update every one second, this will be equal to reading frecuency (Hz).
 detachInterrupt(0);
 SPEED = ( (half_revolutions * 60) * (pi * diameter) ) / 88; // Convert frecuency to RPM, 
 Serial.print("MPH =\t"); 
 Serial.print(SPEED); 
 Serial.print("\t Hz=\t");
 Serial.println(half_revolutions);
 half_revolutions = 0; // Restart the RPM counter
 lastmillis = millis(); // Uptade lasmillis
 attachInterrupt(0, SPEED_ADD , FALLING); 
  }
 }

 void SPEED_ADD (){
  half_revolutions++;
 }
